<h1>Listing all articles</h1>
<p><a href="/articles/new">Create Article</a></p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><a href="/articles/<%= article.id %>/edit">Edit</a></td>
    <td><a href="/articles/<%= article.id %>">Show</a></td>
  </tr>
  <% end %>
</table>